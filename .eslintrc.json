{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "eslint-config-react-app"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "generators": true
    },
    "sourceType": "module"
  },
  "globals": {
    "module": true,
    "__SERVER_RENDERING": true
  },
  "rules": {
    "indent": [
      "warn",
      2,
      {"SwitchCase": 1, "ignoredNodes": ["JSXElement *"]}
    ],
    "max-len": [
      "warn",
      80,
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": [
      "warn",
      { "allow": ["warn", "error"] }
    ],
    "react/jsx-indent-props": ["warn", 1],
    "react/jsx-indent": ["warn", 2]
  }
}
